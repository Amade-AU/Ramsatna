<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    android:orientation="vertical"
    tools:context=".views.Fragments.HomeFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:src="@drawable/homepage_logo" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#CCE1E8"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="5dp">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textColor="@color/navigationBarColor"
                        android:text="عدد المفردات في المعجم"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/total_in_dict_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="16dp"
                        android:text=""
                        android:textSize="30sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="10dp"
                        android:text="شارك في بناء المعجم!" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:id="@+id/home_add_word_botton"
                        android:background="@drawable/rounded_corners"
                        android:text="اضف مفردة"
                        android:textColor="@color/windowBackground" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="10dp"
                        android:text="كلمة اليوم"
                        android:textColor="@color/navigationBarColor"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/word_of_the_day"
                        android:layout_width="150dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:background="@drawable/word_of_the_day_bg"
                        android:text=""
                        android:textColor="@color/colorAccent"
                        android:textSize="30sp" />

                </LinearLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:paddingTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="اخبار"
                    android:textColor="@color/navigationBarColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"/>


                <TextView
                    android:padding="5dp"
                    android:id="@+id/leftImageViewText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/image_right"
                    android:layout_alignRight="@id/image_right"
                    android:layout_alignBottom="@id/image_right"
                    android:layout_margin="1dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#AA000000"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:textColor="@color/windowBackground" />

                <ImageView
                    android:layout_toRightOf="@+id/image_right"
                    android:id="@+id/image_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />



                <TextView
                    android:id="@+id/rightImageViewText"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/image_left"
                    android:layout_alignRight="@id/image_left"
                    android:layout_alignBottom="@id/image_left"
                    android:layout_margin="1dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:background="#AA000000"
                    android:text="Hello"
                    android:textColor="@color/windowBackground" />


            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/dm_logo_smaller"/>


        </LinearLayout>


    </ScrollView>


</LinearLayout>
